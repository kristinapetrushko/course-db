<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.dao.interfaces.INavyweaponDAO">
    <resultMap id="navyweapon" type="com.solvd.model.NavyweaponModel">
        <id property="idNavyweapon" column="idNavyweapon"/>
        <result property="nameNavyweapon" column="nameNavyweapon"/>
        <result property="quantityNavyweapon" column="quantityNavyweapon"/>
        <result property="weaponIdnavy" column="weaponIdnavy"/>
    </resultMap>
    <select id="getAllNavyweapons" resultMap="navyweapon">
        SELECT * FROM bloshkoarmy.navyweapon
    </select>
    <select id="getById" resultMap="navyweapon">
        SELECT * FROM bloshkoarmy.navyweapon
        WHERE idNavyweapon=#{idNavyweapon}
    </select>
    <insert id="addNavyweapon">
        INSERT INTO bloshkoarmy.navyweapon (idNavyweapon,nameNavyweapon,quantityNavyweapon, weaponIdnavy)
        VALUES (#{idNavyweapon},#{nameNavyweapon},#{quantityNavyweapon},#{weaponIdnavy} )
    </insert>
    <update id="updateNavyweapon">
        UPDATE bloshkoarmy.navyweapon SET nameNavyweapon=#{nameNavyweapon}
        WHERE idNavyweapon=#{idNavyweapon}
    </update>
    <delete id="deleteNavyweapon">
        DELETE FROM bloshkoarmy.navyweapon WHERE idNavyweapon=#{idNavyweapon}
    </delete>
</mapper>
